<Page x:Class="FlowersApp.Pages.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlowersApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Артикул"/>
            <TextBox Text="{Binding ProductArticul}"/>
            <TextBlock Text="Наименование"/>
            <TextBox Text="{Binding ProductName}"/>
            <TextBlock Text="Категория"/>
            <TextBox Text="{Binding ProductCategory}"/>
            <TextBlock Text="Цена"/>
            <TextBox Text="{Binding ProductCost}"/>
            <Button Content="Добавление" Margin="5" Click="BtAddClick"/>
        </StackPanel>
    </Grid>
</Page>
